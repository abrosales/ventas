<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
   tools:showIn="@layout/activity_main" tools:context=".MainActivity">


    <TextView
        android:textSize="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Usuario"
        android:id="@+id/lbl_usuario"
        android:layout_marginTop="123dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:textSize="60dp"
        android:inputType="textPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_usuario"
        android:layout_below="@+id/lbl_usuario"
        android:layout_alignLeft="@+id/txt_contraseña"
        android:layout_alignStart="@+id/txt_contraseña"
        android:layout_alignRight="@+id/txt_contraseña"
        android:layout_alignEnd="@+id/txt_contraseña"
        android:textAlignment="center"/>

    <TextView
        android:textSize="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contraseña"
        android:id="@+id/lbl_contraseña"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:textSize="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:id="@+id/btn_entrar"
        android:layout_marginTop="150dp"
        android:onClick="onClickentrar"
        android:layout_below="@+id/txt_contraseña"
        android:layout_centerHorizontal="true" />

    <EditText
        android:textSize="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txt_contraseña"
        android:layout_below="@+id/lbl_contraseña"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>
</RelativeLayout>
